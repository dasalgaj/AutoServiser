<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/black_shade_1"
    app:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/linearLayoutServiser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="30dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnServiserPotvrdi"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/ic_checkmark"
                    android:backgroundTint="@color/black_shade_1">
                </androidx.appcompat.widget.AppCompatButton>

                <TextView
                    android:id="@+id/tvPotvrdaServiser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:layout_below="@id/btnServiserPotvrdi"
                    android:text="Potvrdi"
                    android:textColor="@color/black">
                </TextView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTipServiser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tip servisa"
                        android:textColor="#000000"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tvImePrezimeServiser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ime i prezime"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvMobitelServiser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobitel"
                        android:layout_marginBottom="15dp"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvDatumServiser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Datum servisa"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvVrijemeServiser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vrijeme servisa"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>