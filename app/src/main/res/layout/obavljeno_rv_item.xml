<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    app:cardBackgroundColor="@color/black_shade_1"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:id="@+id/linearLayoutObavljeno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayoutExpandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTipObavljeno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tip servisa"
                android:textColor="#000000"
                android:textSize="20sp"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/tvDatumObavljeno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datum"
                android:textColor="#000000"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/expandable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvImePrezimeObavljeno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ime i prezime"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="16sp"
                android:layout_marginStart="10dp">
            </TextView>

            <TextView
                android:id="@+id/tvMobitelObavljeno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobitel"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_below="@id/tvImePrezimeObavljeno">
            </TextView>

            <TextView
                android:id="@+id/tvVrijemeObavljeno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vrijeme servisa"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_below="@id/tvMobitelObavljeno">
            </TextView>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>